<h1>Eat-Da-Burger</h1>

<ul>
  {{#each burgers}}
    <li>
      <p>
        {{this.id}}. {{this.burger}}

        <form action="/{{this.id}}?_method=DELETE" method="POST">
          <input type="hidden" name="id" value="{{this.id}}">
          <button type="submit">Devour it!</button>
        </form>
      </p>
    </li>
  {{/each}}
</ul>


<form method="POST" action="/" class="button-size">
	<textarea type="text" name="movie"></textarea>
	<button type="submit">Submit</button>
</form>
<h2>Enter a burger you want to eat. Click the "Submit" button.</h2>
